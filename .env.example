# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/timesheet
DB_USER=<your_database_username>
DB_PASSWORD=<your_strong_database_password>

# Authentication
JWT_SECRET=<generate_strong_random_secret_min_32_chars>
JWT_EXPIRY=1h
REFRESH_TOKEN_SECRET=<generate_different_strong_random_secret>
JWT_REFRESH_EXPIRY=7d

# Security
PASSWORD_SALT_ROUNDS=12
SESSION_SECRET=<generate_unique_session_secret>
PASSWORD_RESET_TOKEN_EXPIRY=1h
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=15m
BCRYPT_ROUNDS=12
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=<your_smtp_username>
SMTP_PASSWORD=<your_smtp_password>
SMTP_SECURE=true
EMAIL_FROM=noreply@yourcompany.com

# API Keys and Third Party Services
THIRD_PARTY_API_KEY=<your_api_key_here>

# Client Configuration
REACT_APP_API_URL=http://localhost:5000/api
CORS_ORIGIN=http://localhost:3000

# Logging and Monitoring
LOG_LEVEL=info
ENABLE_AUDIT_LOGS=true
SENTRY_DSN=<your_sentry_dsn>

# Note: Replace all placeholder values (enclosed in <>) with actual secure values.
# Never commit the actual .env file to version control.
# Generate strong random values for secrets using a secure random generator.
